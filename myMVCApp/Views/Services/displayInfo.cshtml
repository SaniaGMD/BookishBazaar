@{
    ViewBag.Title = "Your Booking Details";
}
<style>
    /* Define the Montserrat font */
    

    /* Apply the Montserrat font to the heading */
    .card-title {
        font-family: 'Raleway:', sans-serif;
        font-weight: 300; /* Adjust the font weight as needed */
        text-align: center;
        margin-bottom: 1.5rem; /* Adjust the margin as needed */
    }
</style>


<div class="container">
    <div class="card">
        <div class="card-body">
            <h2 class="card-title text-center mb-4">Your Booking Details</h2>
            
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Name:</strong> @ViewBag.Name</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Gender:</strong> @ViewBag.Gender</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Age:</strong> @ViewBag.Age</p>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Languages:</strong> @string.Join(", ", ViewBag.Languages)</p>
                </div>
            </div>
        </div>
    </div>
</div>
